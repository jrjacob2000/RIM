@model IEnumerable<Web.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>
<hr />
<form asp-action="Index" method="get">

    <div class="row">
        <div class="col-sm-1">
            <h4>Filter</h4>
        </div>
        <div class="col-sm-3">Product: @Html.TextBox("product", "", new { @class = "form-control" })  </div>
        <div class="col-sm-3">
            Category:
            @Html.DropDownList("category", new SelectList(ViewBag.CategoryItems, "Value", "Text"), "- Please Select -", new { @class = "form-control" })
        </div>
        <div class="col-sm-5" style="margin-top:20px">
            <input type="submit" value="search" class="btn btn-default" />
        </div>
    </div>
</form>
<hr />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="overflow:auto">


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.InventoryOnHand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryToCome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryToGo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.InventoryOnHand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryToCome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryToGo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InventoryValue)
                </td>
                <td>
                    <span style="white-space:nowrap">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })</span>
                </td>
            </tr>
}

    </table>

</div>