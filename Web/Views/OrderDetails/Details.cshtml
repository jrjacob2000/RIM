@model Web.Models.OrderDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        @if(Model.Order.OrderType != Web.Controllers.Helper.Constants.OrderType.ADJUST)
        { 
        <dt>
            @Html.DisplayNameFor(model => model.ProductPrice.SelesPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPrice.SelesPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitDiscount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitDiscount)
        </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @if (Model.Order.OrderType == Web.Controllers.Helper.Constants.OrderType.ADJUST)
    {
        @Html.ActionLink("Back to List", "AdjustDetails", "Orders", new { Id = Model.Order.Id }, null)
    }
    else
    {
        @Html.ActionLink("Back to List", "Details","Orders", new { Id = Model.Order.Id }, null)
    }
</p>
