@model Web.Models.OrderDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        @if (Model.Order.OrderType != Helper.Constants.OrderType.ADJUST)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ProductPrice.SelesPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductPrice.SelesPrice)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UnitDiscount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitDiscount)
            </dd>
        }
    </dl>

</div>


<p>
    <a href="@Url.Action("Edit", new { id = Model.Id, returnUrl = Request.Url })" class="btn  btn-primary">
        <span class="glyphicon glyphicon-pencil"></span> Edit
    </a>
    <a href="@Request.UrlReferrer" id="cancel" name="cancel" class="btn btn-default">
        <span class="glyphicon glyphicon-ban-circle"></span>
        Cancel
    </a>
</p>
