@model Web.Models.OrderDetail

@{
    ViewBag.Title = "Delete";
}

<h3>Delete</h3>

<h3>Are you sure you want to delete this line item?</h3>
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        @if (Model.Order.OrderType != Helper.Constants.OrderType.ADJUST)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ProductPrice.SelesPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductPrice.SelesPrice)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UnitDiscount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitDiscount)
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">

            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-remove"></span>
                Delete
            </button>
            <a href="@Request.UrlReferrer" id="cancel" name="cancel" class="btn btn-default">
                <span class="glyphicon glyphicon-ban-circle"></span>
                Cancel
            </a>
        </div>
    }
</div>
