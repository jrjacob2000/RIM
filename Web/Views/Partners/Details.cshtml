@model Web.Models.Partner

@{
    ViewBag.Title = "Details";
}

<h3>View @Model.Name</h3>

<div>
    <div class="row">
        <div class="custom-header-div">
            @Html.ActionLink("Invoice Payment", "Create", "Payments", new {Type="RECIEVE", Partner_Id = Model.Id }, null)|
            @Html.ActionLink("Bill Payment", "Create", "Payments", new { Type = "BILL", Partner_Id = Model.Id }, null)|
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
    <hr />
    <h5 style="font-weight:bold; font-size:16px; color:gray">DETAIL</h5>
    <dl >
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShippingAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShippingAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BillingAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BillingAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contact)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contact)
        </dd>

    </dl>
</div>

<h5 style="font-weight:bold; font-size:16px; color:gray">PAYMENTS RECEIVED</h5>
<table class="table table-striped" style="margin-left:25px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Payments.First().Date)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.Payments.First().Reference)
        </th>     
        <th>
            Amount
        </th>
    </tr>

    @foreach (var item in Model.Payments.Where(x => x.Type == "RECIEVE").OrderByDescending(o => o.Date))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>

        </tr>
    }
</table>

<h5 style="font-weight:bold; font-size:16px; color:gray">REFUND PAID</h5>
<table class="table table-striped" style="margin-left:25px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Payments.First().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payments.First().Reference)
        </th>
        <th>
            Amount
        </th>
    </tr>

    @foreach (var item in Model.Payments.Where(x => x.Type == "REFUND").OrderByDescending(o => o.Date))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>

        </tr>
    }
</table>

@if (Model.Payments.Where(x => x.Type == "BILL").Count() > 0)
{ 
<h5 style="font-weight:bold; font-size:16px; color:gray">BILLS PAID</h5>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Payments.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payments.First().Reference)
            </th>
            <th>
                Amount
            </th>
        </tr>

        @foreach (var item in Model.Payments.Where(x => x.Type == "BILL"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>

            </tr>
        }
    </table>
}
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
