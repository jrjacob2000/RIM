@model Web.Models.UserSetting

@{
    ViewBag.Title = "Application Settings";
}

<h2>Application Settings</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <strong>Success!</strong> @ViewBag.Message.
            </div>
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.BusinessName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BusinessName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusinessName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <h4>
                <p>The following fields are set on auto-generate mode to save your time. Do you want to change settings?</p>
            </h4>
        </div>
        <hr />
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.InvoiceNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">@Html.RadioButtonFor(x => x.InvoiceAuto,"true", new { htmlAttributes = new { @class = "form-control" } }) Continue auto-generating invoice numbers</div>
                <div class="col-md-6"></div>
            </div>
            <div class="row">               
                <div class="col-md-3">
                    </div>
                <div class="col-md-1">
                    <span>Prefix</span>
                    @Html.EditorFor(model => model.InvoicePrefix, Model.InvoiceAuto ? new { htmlAttributes = (object)new { @class = "form-control" } } : new { htmlAttributes = (object)new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.InvoicePrefix, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span>Next Number</span>
                    @Html.EditorFor(model => model.InvoiceNumber, Model.InvoiceAuto ? new { htmlAttributes = (object)new { @class = "form-control" } } : new { htmlAttributes = (object)new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.InvoiceNumber, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4">@Html.RadioButton("InvoiceAuto", "false") I will add them manually</div>
                <div class="col-md-6"></div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.PurchaseNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">@Html.RadioButton("PurchaseAuto", "true", true, new { htmlAttributes = new { @class = "form-control" } }) Continue auto-generating purchase numbers</div>
                <div class="col-md-6"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-1">
                    <span>Prefix</span>
                    @Html.EditorFor(model => model.PurchasePrefix, Model.PurchaseAuto ? new { htmlAttributes = (object)new { @class = "form-control" } } : new { htmlAttributes = (object)new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.PurchasePrefix, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span>Next Number</span>
                    @Html.EditorFor(model => model.PurchaseNumber, Model.PurchaseAuto ? new { htmlAttributes = (object)new { @class = "form-control" } } : new { htmlAttributes = (object)new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.PurchaseNumber, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4">@Html.RadioButton("PurchaseAuto", "false") I will add them manually</div>
                <div class="col-md-6"></div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.SalesNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">@Html.RadioButton("SalesAuto", "true", true, new { htmlAttributes = new { @class = "form-control" } }) Continue auto-generating sales numbers</div>
                <div class="col-md-6"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-1">
                    <span>Prefix</span>
                    @Html.EditorFor(model => model.SalesPrefix, Model.SalesAuto ? new { htmlAttributes = (object)new { @class = "form-control" } } : new { htmlAttributes = (object)new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.SalesPrefix, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span>Next Number</span>
                    @Html.EditorFor(model => model.SalesNumber, Model.SalesAuto ? new { htmlAttributes = (object)new { @class = "form-control" } } : new { htmlAttributes = (object)new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.SalesNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4">@Html.RadioButton("SalesAuto", "false") I will add them manually</div>
                <div class="col-md-6"></div>
            </div>
        </div>
        <hr />

        <div class="form-group">
           
            <div class="col-md-10">
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script type="text/javascript">

        $(document).ready(function() {
            $(':radio[name=InvoiceAuto]').change(function () {
                // read the value of the selected radio
                var value = $(this).val();
                if (value == 'true') {
                    $('#InvoicePrefix').removeAttr("disabled");;
                    $('#InvoiceNumber').removeAttr("disabled");
                }
                else {
                    $('#InvoicePrefix').val('');
                    $('#InvoicePrefix').attr("disabled", "true");;
                    $('#InvoiceNumber').val('');
                    $('#InvoiceNumber').attr("disabled", "true");
                }
            });


            $(':radio[name=PurchaseAuto]').change(function () {
                // read the value of the selected radio
                var value = $(this).val();
                if (value == 'true') {
                    $('#PurchasePrefix').removeAttr("disabled");;
                    $('#PurchaseNumber').removeAttr("disabled");
                }
                else {
                    $('#PurchasePrefix').val('');
                    $('#PurchasePrefix').attr("disabled", "true");;
                    $('#PurchaseNumber').val('');
                    $('#PurchaseNumber').attr("disabled", "true");
                }
            });


            $(':radio[name=SalesAuto]').change(function () {
                // read the value of the selected radio
                var value = $(this).val();
                if (value == 'true') {
                    $('#SalesPrefix').removeAttr("disabled");;
                    $('#SalesNumber').removeAttr("disabled");
                }
                else {
                    $('#SalesPrefix').val('');
                    $('#SalesPrefix').attr("disabled", "true");;
                    $('#SalesNumber').val('');
                    $('#SalesNumber').attr("disabled", "true");
                }
            });
        });
</script>  