@model IEnumerable<Web.Models.Payment>

@{
    ViewBag.Title = "Index";
}

<h2>Payments</h2>

<p>
    @Html.ActionLink("Receive Payment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Partner_Id)
        </th>    
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
           
