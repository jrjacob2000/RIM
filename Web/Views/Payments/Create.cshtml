@model Web.Models.Payment

@{
    ViewBag.Title = "Create";
}
@{
    string showDetail = "hidden";
    string listTitle = "";
    if (Model.PaymentDetails.Count > 0)  
    {    
        showDetail = "visible";       
    }

}

@if (Model.Type == Web.Controllers.Helper.Constants.PaymentType.RECIEVE)
{
    listTitle = "Unpaid Invoices";
    <h3 style="float:left">Receive Payment</h3>
}
else if (Model.Type == Web.Controllers.Helper.Constants.PaymentType.REFUND)
{
    listTitle = "Unpaid Credit Notes";
    <h3 style="float:left">Refund Customer</h3>
}
else if (Model.Type == Web.Controllers.Helper.Constants.PaymentType.BILL)
{
    listTitle = "Unpaid Bills";
    <h3 style="float:left">Pay Bill</h3>
}

<div style="display:inline-block; width:100%">   
    <div style="float:right">
        @if (!(ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0))
        {
            <span>
                <input type="submit" value="Save" form="paymentForm" class="btn btn-primary" /> |
            </span>
        }
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
<hr style="margin-top:0px" />

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
{
    <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">×</a>
        @Html.ValidationSummary(true)
    </div>
}

